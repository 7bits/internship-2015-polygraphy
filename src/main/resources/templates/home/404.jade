html
    head
        meta(charset='UTF-8')
        title Page Not Found
        meta(name="viewport", content="width=device-width, initial-scale=1")
        meta(name="_csrf", content="#{_csrf.token}")
        meta(name="_csrf_header", content="#{_csrf.headerName}")
        link(rel="stylesheet", href="/build/stylesheets/main.css")
        link(rel="shortcut icon", href="/images/favicon.ico")
    body
        =message
        .error-page
            .error-page__content
                .error-page__explanatory-text
                    #{message.getMessage('jade.error.number.404')}
                    br
                    #{message.getMessage('jade.error.message.404')}
                .error-page__submit
                    a.general-submit(href='/')
                        #{message.getMessage('jade.on_the_main')}

        script(type='application/javascript', src='/vendor/scripts/jquery-2.1.4.min.js')
        script(type='application/javascript', src='/build/scripts/main.js')