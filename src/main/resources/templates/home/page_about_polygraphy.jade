extends ../layouts/layout

block append head
    link(rel="stylesheet", href="../stylesheets/style-page-about-polygraphy.css")
    link(rel="stylesheet", href="../stylesheets/icons.css")

block content

    .comeback-button-container
        a.comeback(href='/')
            | Вернуться к поиску
    main
        .info
            .summary
                .polygraphy-name
                    = polygraphy.name
                table.services
                    tr
                        td.sticker
                        td.card
                        td.calendar
                        td.magnit
                    tr
                        td.cup
                        td.badge
                        td.bunner
                        td.note
                table.adaptive-services
                    tr
                        td.bunner
                        td.t-shirt
                        td.cup
                    tr
                        td.note
                        td.badge
                        td.magnit
                    tr
                        td.sticker
                        td.card
                        td.calendar
                .address= polygraphy.address
                .phone= polygraphy.phone
                .email= polygraphy.email
                .site
                    a(href='#{polygraphy.website}', target="_blank")= polygraphy.website
            if(polygraphy.info != '')
                .details
                    .about-title
                        | О ПОЛИГРАФИИ
                    .about-text!= polygraphy.info
        .helper