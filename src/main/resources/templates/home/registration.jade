extends ../layouts/layout

block append head
    script(type='text/javascript', src='/vendor/ckeditor/ckeditor.js')

block content

    .general-form.general-form_registration(id='big-form')
        .general-form-headline
            #{jadeMessage.getMessage('template.registration.headline')}
        form(id='registration-form')
            fieldset
                input.general-input__input(type='hidden', name='#{_csrf.parameterName}', value='#{_csrf.token}')
                input.general-input__input#hash(type='hidden', name='hash', value='#{hash}')

                .general-form__input
                    .general-input
                        label.general-input__label
                            #{jadeMessage.getMessage('template.registration.input.email')}
                        input.general-input__input.js-normal-input#email-input(name='email', type='text')
                        .general-input__for-error.js-none-display(id = 'email-for-error')
                        .general-input__invalid.js-none-display(id = 'email-error')

                .general-form__input
                    .general-input
                        label.general-input__label
                            #{jadeMessage.getMessage('template.registration.input.password')}
                        input.general-input__input.js-normal-input#password-input(name='password', type='password')
                        .general-input__for-error.js-none-display(id = 'password-for-error')
                        .general-input__invalid.js-none-display(id='password-error')

                .general-form__input
                    .general-input
                        label.general-input__label
                            #{jadeMessage.getMessage('template.registration.input.name_polygraphy')}
                        input.general-input__input.js-normal-input#name-input(name='name', type='text')
                        .general-input__for-error.js-none-display(id='name-for-error')
                        .general-input__invalid.js-none-display(id='name-error')

                .general-form__input
                    .general-input
                        label.general-input__label
                            #{jadeMessage.getMessage('template.registration.input.address')}
                        input.general-input__input.js-normal-input#address-input(name='address', type='text')
                        .general-input__for-error.js-none-display(id='address-for-error')
                        .general-input__invalid.js-none-display(id='address-error')

                .general-form__input
                    .general-input
                        label.general-input__label
                            #{jadeMessage.getMessage('template.registration.input.phone')}
                        input.general-input__input.js-normal-input#phone-input(name='phone', type='text')
                        .general-input__for-error.js-none-display(id='phone-for-error')
                        .general-input__invalid.js-none-display(id='phone-error')

                .general-form__input
                    .general-input
                        label.general-input__label
                            #{jadeMessage.getMessage('template.registration.input.public_email')}
                        input.general-input__input.js-normal-input#email-public-input(name='publicEmail', type='text')
                        .general-input__for-error.js-none-display(id='publicEmail-for-error')
                        .general-input__invalid.js-none-display(id='publicEmail-error')

                .general-form__input
                    .general-input
                        label.general-input__label
                            #{jadeMessage.getMessage('template.registration.input.website')}
                        input.general-input__input.js-normal-input#website-input(name='website', type='text')

                .general-form__input
                    .general-input
                        label.general-input__label
                            #{jadeMessage.getMessage('template.registration.input.description')}
                        textarea.general-input__input.js-normal-input.b-registration__textarea-field#text-area-field(name='textArea')
                    script.
                        CKEDITOR.replace('textArea');

                .general-form__base-error.js-none-display

            fieldset

                .general-checkbox
                    input.js-obe.general-checkbox__checkbox(id='orderByEmail', name='orderByEmail', type='checkbox')
                    label(for='orderByEmail') #{jadeMessage.getMessage('template.registration.input.order_by_email')}

                .general-checkbox
                    input.js-wtc.general-checkbox__checkbox(id='writesTheCheck', name='writesTheCheck', type='checkbox')
                    label(for='writesTheCheck') #{jadeMessage.getMessage('template.registration.input.writes_the_check')}

                .general-form__checkboxes
                    label.general-input__label.general-input__label_headline
                        #{jadeMessage.getMessage('template.registration.input.payment_methods')}
                    for paymentMethod in paymentMethods
                        .general-checkbox
                            input.js-pm.general-checkbox__checkbox(id='payment#{paymentMethod.id}', name='paymentMethods', value='#{paymentMethod.id}', type='checkbox')
                            label(for='payment'+paymentMethod.id)=paymentMethod.name
                    .general-input__for-error.js-none-display(id='paymentMethods-for-error')
                    .general-input__invalid.js-none-display(id='paymentMethods-error')

                .general-form__checkboxes
                    label.general-input__label.general-input__label_headline
                        #{jadeMessage.getMessage('template.registration.input.delivery_methods')}
                    for deliveryMethod in deliveryMethods
                        .general-checkbox
                            input.js-dm.general-checkbox__checkbox(id='delivery#{deliveryMethod.id}', name='deliveryMethods', value='#{deliveryMethod.id}', type='checkbox')
                            label(for='delivery'+deliveryMethod.id)=deliveryMethod.name
                    .general-input__for-error.js-none-display(id='deliveryMethods-for-error')
                    .general-input__invalid.js-none-display(id='deliveryMethods-error')

                .general-form__checkboxes.general-form__checkboxes_services
                    label.general-input__label.general-input__label_headline
                        #{jadeMessage.getMessage('template.registration.input.services')}
                    for service in services
                        .general-checkbox
                            input.js-s.general-checkbox__checkbox(id='service#{service.id}', name='services', value='#{service.id}', type='checkbox')
                            label(for='service'+service.id)=service.name
                    .general-input__for-error.js-none-display(id='services-for-error')
                    .general-input__invalid.js-none-display(id='services-error')

            .general-form__button
                - buttonType = 'button'
                button.general-submit.general-submit_save-data(type=buttonType, id='submit-registration-form')
                    #{jadeMessage.getMessage('template.registration.button.save')}