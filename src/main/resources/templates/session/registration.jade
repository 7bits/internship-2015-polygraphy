extends ../layouts/layout

block append head
    link(rel='stylesheet', href='/stylesheets/registration.css')
    script(type='application/javascript', src='/scripts/step-by-step-registration.js')
    script(type='application/javascript', src='/scripts/registration.js')
    script(type='application/javascript', src='/scripts/display-errors.js')
    script(type='text/javascript', src='/vendor/ckeditor/ckeditor.js')

block content

    .registration-form
        .registration-form-headline
            | РЕГИСТРАЦИЯ ПОЛИГРАФИИ
        form(id='registration-form')
            fieldset
                input(type='hidden', name='#{_csrf.parameterName}', value='#{_csrf.token}')
                input.input-field#hash(type='hidden', name='hash', value='#{hash}')
                .text-fields
                    .text-input-wrapper
                        label.input-label
                            |E-mail для регистрации *
                        input.input-field#email-input(name='email', type='text')
                        .for-error(id = 'email-for-error')
                        .invalid(id = 'email-error')
                    .text-input-wrapper
                        label.input-label
                            |Пароль *
                        input.input-field#password-input(name='password', type='password')
                        .for-error(id = 'password-for-error')
                        .invalid(id='password-error')
                    .text-input-wrapper
                        label.input-label
                            | Название полиграфии *
                        input.input-field#name-input(name='name', type='text')
                        .for-error(id='name-for-error')
                        .invalid(id='name-error')
                    .text-input-wrapper
                        label.input-label
                            | Адрес *
                        input.input-field#address-input(name='address', type='text')
                        .for-error(id='address-for-error')
                        .invalid(id='address-error')
                    .text-input-wrapper
                        label.input-label
                            | Телефон *
                        input.input-field#phone-input(name='phone', type='text')
                        .for-error(id='phone-for-error')
                        .invalid(id='phone-error')
                    .text-input-wrapper
                        label.input-label
                            | Публичный e-mail
                        input.input-field#email-public-input(name='publicEmail', type='text')
                        .for-error(id='publicEmail-for-error')
                        .invalid(id='publicEmail-error')
                    .text-input-wrapper
                        label.input-label
                            | Сайт
                        input.input-field#website-input(name='website', type='text')
                    .text-input-wrapper
                        label.input-label
                            | Описание
                        textarea.input-field.textarea-field#text-area-field(name='textArea')
                        script.
                            CKEDITOR.replace('textArea')
                .base-error
            fieldset
                .field-checkboxes
                    .field-order-by-email.field-checkbox
                        input.js-obe.checkbox(id='orderByEmail', name='orderByEmail', type='checkbox')
                        label(for='orderByEmail') Принимаем заказы по e-mail
                    .field-issue-check.field-checkbox
                        input.js-wtc.checkbox(id='writesTheCheck', name='writesTheCheck', type='checkbox')
                        label(for='writesTheCheck') Выдаем чек
                    .field-payment
                        label.input-label
                            | Принимаем оплату: *
                        .input-wrapper
                            for paymentMethod in paymentMethods
                                .field-checkbox
                                    input.js-pm.checkbox(id='payment#{paymentMethod.id}', name='paymentMethods', value='#{paymentMethod.id}', type='checkbox')
                                    label(for='payment'+paymentMethod.id)=paymentMethod.name
                        .for-error(id='paymentMethods-for-error')
                        .invalid(id='paymentMethods-error')
                    .field-delivery
                        label.input-label
                            | Доставка готового заказа: *
                        .input-wrapper
                            for deliveryMethod in deliveryMethods
                                .field-checkbox
                                    input.js-dm.checkbox(id='delivery#{deliveryMethod.id}', name='deliveryMethods', value='#{deliveryMethod.id}', type='checkbox')
                                    label(for='delivery'+deliveryMethod.id)=deliveryMethod.name
                        .for-error(id='deliveryMethods-for-error')
                        .invalid(id='deliveryMethods-error')
                    .field-services
                        label.input-label
                            | Предоставляемые услуги: *
                        .input-wrapper
                            for service in services
                                .field-checkbox
                                    input.js-s.checkbox(id='service#{service.id}', name='services', value='#{service.id}', type='checkbox')
                                    label(for='service'+service.id)=service.name
                        .for-error(id='services-for-error')
                        .invalid(id='services-error')
                button.submit-registration-form(type='button', id='submit-registration-form') Сохранить данные
